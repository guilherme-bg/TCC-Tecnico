@model TCC.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Inserir";
}

<h2>@ViewData["Title"]</h2>
<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario.Nome" class="control-label"></label>
                <input asp-for="Usuario.Nome" class="form-control" />
                <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Email" class="control-label"></label>
                <input asp-for="Usuario.Email" class="form-control" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Senha" class="control-label"></label>
                <input asp-for="Usuario.Senha" type="Password" class="form-control" />
                <span asp-validation-for="Usuario.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Telefone" class="control-label"></label>
                <input asp-for="Usuario.Telefone" class="form-control" />
                <span asp-validation-for="Usuario.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.CidadeId" class="control-label"></label>
                <select asp-for="Usuario.CidadeId" asp-items="@(new SelectList(Model.Cidades,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Selecione o tipo de sua moradia:</label>
                <label><input asp-for="Usuario.Moradia" value="Casa" type="radio" />Casa</label>
                <label><input asp-for="Usuario.Moradia" value="Apartamento" type="radio" />Apartamento</label>
                <span asp-validation-for="Usuario.Moradia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Você possui telas nas saídas de sua residência(portas, janelas)?</label>
                <label><input asp-for="Usuario.Protecao" value="Sim" type="radio" />Sim</label>
                <label><input asp-for="Usuario.Protecao" value="Não" type="radio" />Não</label>
                <span asp-validation-for="Usuario.Protecao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantos animais você possui em sua residência?</label>
                <input asp-for="Usuario.QtAnimais" class="form-control" />
                <span asp-validation-for="Usuario.QtAnimais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-default" />
                <a asp-action="Index">Retornar para a lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}