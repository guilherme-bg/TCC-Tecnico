@model TCC.Models.ViewModels.EditarUsuarioViewModel
@{
    ViewData["Title"] = "Editar Usuário";
}

    <h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group ">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-primary">Cancelar</a>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading"><h3>Níveis de acesso do usuário</h3></div>
                <div class="panel-body">
                    @if (Model.Roles.Any()) {
                        foreach (var role in Model.Roles) {
                            <h5 class="panel-title">@role</h5>
                        }
                    } else {
                        <h5 class="panel-title">Nenhum até o momento</h5>
                    }
                </div>
                <div class="panel-footer">
                    <a asp-action="#" class="btn btn-primary" style="width:auto">Gerenciar acesso</a>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading"><h3>Declarações do usuário</h3></div>
                <div class="panel-body">
                    @if (Model.Roles.Any()) {
                        foreach (var claim in Model.Claims) {
                            <h5 class="panel-title">@claim</h5>
                        }
                    } else {
                        <h5 class="panel-title">Nenhuma até o momento</h5>
                    }
                </div>
                <div class="panel-footer">
                    <a asp-action="#" class="btn btn-primary" style="width:auto">Gerenciar declarações</a>
                </div>
            </div>
        </form>
    </div>
</div>