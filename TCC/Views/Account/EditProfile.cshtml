@model TCC.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<h2>@ViewData["Title"]</h2>


<div class="col-md-12">
    <form method="post">
        <p>* Campos obrigatórios</p>
                <div class="form-group">
            <label>*Nome</label>
            <input asp-for="Nome" placeholder="Ex: Ana" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>*Telefone</label>
            <input id="telefone" asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>*Cidade</label>
            @Html.DropDownListFor(m => m.CidadeId, new SelectList(Model.Cidades, "Id", "Nome"), "Selecione a Cidade--", new { @class = "form-control" })
            <span asp-validation-for="CidadeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">*Selecione o tipo de sua moradia:</label>
            <label><input asp-for="Moradia" value="Casa" type="radio" />Casa</label>
            <label><input asp-for="Moradia" value="Apartamento" type="radio" />Apartamento</label>
            <span asp-validation-for="Moradia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">*Você possui telas nas saídas de sua residência(portas, janelas)?</label>
            <label><input asp-for="Protecao" value="Sim" type="radio" />Sim</label>
            <label><input asp-for="Protecao" value="Não" type="radio" />Não</label>
            <span asp-validation-for="Protecao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">*Quantos animais você possui em sua residência?</label>
            <input asp-for="QtAnimais" class="form-control" />
            <span asp-validation-for="QtAnimais" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="display: block">Sobre mim:</label>
            <textarea asp-for="Bio" placeholder="Sobre mim...." rows="8" cols="160"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-action="Profile" asp-controller="Account" class="btn btn-danger">Cancelar</a>
    </form>
</div>


<script src="~/lib/jquery-mask-plugin/src/jquery.mask.js" type="text/javascript" asp-append-version="true"></script>
<script>
    $('#telefone').mask('(00) 00000-0000', { placeholder: "(51) 99999-9999" });

</script>