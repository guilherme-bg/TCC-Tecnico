@model List<TCC.Models.ViewModels.UserRolesViewModel>


@{
    ViewData["Title"] = "Gerenciar níveis do Usuário";
    var userId = ViewBag.UserId;
}

<h2>ViewData["Title"]</h2>

<form method="post">
    <div class="panel panel-default">
        <div class="panel-heading">Adicionar ou remover níveis deste Usuário</div>
        <div class="panel-body">
            @for (int i = 0; i < Model.Count; i++) {
                <div class="form-group-lg">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
        </div>
        <div class="panel-footer">
            <input type="submit" value="Salvar" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-Id="@userId" class="btn btn-primary" style="width:auto">Voltar</a>
        </div>
</form>
