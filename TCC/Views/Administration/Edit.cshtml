@model TCC.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "Editar Nível";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Role</button>
                <a asp-action="Index" class="btn btn-primary">Cancelar</a>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <h3>Usuários deste nível:</h3>
            <table class="table table-striped table-hover col-sm-1">
                <thead>
                    <tr class="success">
                        <th scope="col">Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Any()) {
                        foreach (var user in Model.Users) {
                            <tr>
                                <td>
                                    @user
                                </td>
                            </tr>
                        }
                    } else {
                        <tr>
                            <td colspan="3" style="color: red">
                                Sem Resultados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <a asp-action="AddUser" class="btn btn-primary">Adicionar Usuário</a>
                <a asp-action="RemoveUser" class="btn btn-primary">Remover Usuário</a>
            </div>

        </form>
    </div>
</div>

