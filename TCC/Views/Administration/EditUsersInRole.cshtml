@model List<TCC.Models.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "Editar níveis de usuários";
    var roleId = ViewBag.roleId;
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="panel panel-default">
        <div class="panel-heading">Adicionar ou remover usuários deste nível</div>
        <div class="panel-body">
            @for (int i = 0; i < Model.Count; i++) {
                <div class="form-group-lg">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                </div>
            }
        </div>
        <div class="panel-footer">
            <input type="submit" value="Salvar" class="btn btn-primary" style="width:auto" />
            <a asp-action="Edit" asp-route-roleId="@roleId" class="btn btn-primary" style="width:auto">Voltar</a>
        </div>
</form>