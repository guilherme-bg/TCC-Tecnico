@model IEnumerable<Animal>

@{
    ViewData["Title"] = "Index";
}

@{
    ViewBag.Title = "Employee List";
}


<div class="panel">
    @foreach (var animal in Model) {
        var photoPath = "~/images/" + (animal.Foto ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@animal.Nome</h3>
            </div>

            <img class="img-thumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Animal" asp-action="Details" asp-route-id="@animal.Id"
                   class="btn btn-primary m-1">Detalhes!</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
